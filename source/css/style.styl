// Code
@import "_highlight/" + highlight
pre
  font-family: $font-family-mono
  font-size: 13px
  padding: 10px 15px
  padding-bottom: 0
  line-height: 22px
  -webkit-border-radius: 4px
  border-radius: 4px
  border: 1px dotted #666
  overflow-x: auto
code
  -webkit-border-radius: 2px
  border-radius: 2px
  border: 1px dotted #666
  padding: 0 5px
pre code
  border: none
  display: block
  padding: 0

.highlight
  font-family: $font-family-mono;
  background: lighten($color-background, 2%)
  // color: $color-light
  -webkit-border-radius: 4px
  border-radius: 4px
  padding: 10px 15px
  overflow-x: auto
  margin: 1rem 0 1rem 0
  figcaption
    zoom: 1
    margin: -5px 0 5px
    font-size: 0.9em
    color: #999
    a
      float: right
    &:before,
      content: ""
      display: table
    &:after
      clear: both
  pre
    padding: 0
    border: none
    background: none
  table
    width: auto
  td.gutter
    text-align: right
    padding-right: 20px
    display: none

.cf-form-field
  margin-bottom: 1.5rem
  > label
    font-size: 1rem
    font-weight: bold
    text-decoration: none;
    letter-spacing: 0.03em
    margin-top: 1.8rem
    color: $color-lightest
    display: block
    margin-bottom: 0.4rem

$input-border()
  // Set both properties to fix some browser inconsistencies
  border-width: 0 0 2px 0
  border-style: solid
  border-color: transparent
  border-image-width: 0 0 1px 0
  border-image-source: $dotted-border-image
  border-image-repeat: round
  border-image-slice: 1 1

// Common base for <input> and <textarea> 
$input-base()
  font-size: 16px
  color: $color-accent
  display: block
  width: 100%
  line-height: 1.5em
  outline: 0
  padding: 0 2px
  background-color: $color-background
  $input-border()

  transition: 0.2s linear
  transition-property: padding

  &[focus="true"]
   background-color: transparent
   color: $color-dimmed

  &[aria-invalid="true"], &:invalid
    background-color: $color-background

  &[aria-disabled="true"], &[disabled], &:disabled
    background-color: $color-background
    color: $color-dimmed
    border-image: none
  

input.cf-form-input
  $input-base()
  height: 24px
  // If the size property is set it determines the width
  &[size]
    width: auto

textarea.cf-form-input
  $input-base()
  padding-top: 0.2em
  height: 8.5em
  // Prevents horizontal user resizing
  max-width: 100%

input[type="submit"]
  $input-base()
  height: 32px
  font-size: 22px
  background-color: $color-accent
  color:  $color-background
  // If the size property is set it determines the width
  &[size]
    width: auto