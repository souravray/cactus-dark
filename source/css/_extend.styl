$base-style
    h1,
    .h1
        font-size: 1.5em
        font-style: normal
        font-weight: 700
        color: $color-accent
        margin-top: 3rem
        margin-bottom: 1rem
        letter-spacing: 0.04em
        display: block
        antialias()
    h2,
    .h2
        position: relative
        font-size: 1rem
        font-weight: bold
        text-transform: none
        letter-spacing: 0.03em
        margin-top: 1.8rem
        margin-bottom: 0.3rem
        color: $color-lightest
        display: block
    h3
        font-size: 0.9rem
        font-weight: bold
        text-decoration: none;
        margin-top: 1.8rem
        margin-bottom: 0.2rem
        color: $color-lightest
        letter-spacing: 0.03em
    h4,
    h5,
    h6
        font-size: 0.9rem
        font-weight: normal
        color: $color-light
        border-bottom: 1px dashed $color-light
        display: inline
        text-decoration: none
    h3,
    h4,
    h5,
    h6
        margin-top: 0.9rem
        margin-bottom: 0.5rem
    p
        margin-top: 0.2rem
        margin-bottom: 0.4rem
    hr
        border: 1px dashed $color-light
    strong
        font-weight: bold
    em, cite
        font-style: italic
    sup, sub
        font-size: 0.75em
        line-height: 0
        position: relative
        vertical-align: baseline
    sup
        top: -0.5em
    sub
        bottom: -0.2em
    small
        font-size: 0.85em
        line-height: 1em
        margin-top: 0
        margin-bottom: 0
    acronym, abbr
        border-bottom: 1px dotted
    ul, ol, dl
        line-height: $line-height
        margin-top: 0.2rem
        margin-bottom: 0.2rem
    ul, ol
        ul, ol
            margin-top: 0
            margin-bottom: 0
    ol
        list-style: decimal
    dt
        font-weight: bold
    table
        width: 100%
        font-size: $font-size - 2px
        border-collapse: collapse
        text-align: left
    th
        font-size: $font-size - 1px
        font-weight: bold
        color: $color-lightest
        border-bottom: 1px dashed #ccc
        padding: 8px 8px
    td
        border-bottom: none 
        padding: 9px 8px 0px 8px
